<!DOCTYPE html>
<html>
  <%- include('./partials/head', { title: 'index' }) %>

  <body>
    <%- include('./partials/header') %>
    <main class="main-index">
    
      
      <%- include('./partials/banner') %>

      <!-- <section class="index-container"> -->
        <h2 class="titulo-index">Un universo de instrumentos</h2>
        <h3 class="titulo-index1">Explorá nuestro catálogo y descubrí tu próximo sonido.</h3>
        <% products.forEach((product) => { %>
        <article class="index-card">
            <a href="/products/detail/<%= product.id %>">
              <img class="main-product-foto"
              src="images/products/<%= product.images && product.images.length > 0 ? product.images[0].file : 'default.webp' %>"
              alt="<%= product.name %>"
              />
            </a>

            <div class="index-info">
              <h2 class="index-h1"><%= product.name %></h2>
              <p class="index-detail"><%= product.description %></p>

              <% if (product.discount != 0) { %>
                <p>
                  <strong class="index-discountCard"><%= product.discount %>% OFF</strong>
                  <span class="tachado-index">
                    $<%= product.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, "." ) %>
                  </span>
                </p>
                <h2 class="price-index">
                  Precio $<%= (product.price - (product.price * product.discount / 100)).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %>
                </h2>
              <% } else { %>
                <h2 class="price-index">
                  Precio $<%= product.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %>
                </h2>
              <% } %>
            </article>
          </div>
        <!-- </section> -->
      <% }) %>
    </main>

    <%- include('./partials/footer') %>
  </body>
</html>
