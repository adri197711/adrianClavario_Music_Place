  <script>
    let currentIndex = 0;
    const slidesBanner = document.querySelector('.slidesBanner');
    const slideBanners = document.querySelectorAll('.slideBanner');
    const totalSlides = slideBanners.length;

    const firstClone = slideBanners[0].cloneNode(true);
    slidesBanner.appendChild(firstClone);


    setInterval(() => {
      currentIndex++;
      slidesBanner.style.transition = 'transform 0.5s ease';
      slidesBanner.style.transform = `translateX(-${100 * currentIndex}%)`;

      if (currentIndex === totalSlides) {
        //espero a que termine la transici√≥n
