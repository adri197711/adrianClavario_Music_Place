<!DOCTYPE html>
<html>
  <%- include('.././partials/headAdmin', {title:'Editar producto'}) %>
  <body>
    <%- include('.././partials/headAdmin', {title:'Editar producto'}) %>
    <main class="body">
      <div id="registroForm">
        
    <h2 class="h2-edit" >Editar producto</h2>
    <form action="/products/update/<%= product.id %>?_method=PUT"
       method="POST" id="formAddProduct">


      <label for="name">Producto</label>
      <input class="reg-input"  type="text" value="<%= product.name %>"  id="productname" name="name" >
      <div class="error" id="errorproduct"></div>
      <br>
       
      <br>
      
      <label for="price">Precio</label>
      <input  class="reg-input" type="number" value="<%= product.price %>" id="price" name="price" >
      <div class="error" id="errorPrice"></div>
      <br>
      <label for="discount">Descuento</label>
      <input class="reg-input" type="text" value="<%= product.discount %>"  id="discount" name="discount" autocomplete="off">
      <div class="error" id="errordiscount"></div>
      <br>
