<!DOCTYPE html>
<html>
<%- include('../partials/head', {title:'detalle del producto'}) %>

  <body>
    <main>

    <%- include('../partials/banner') %>
<section class="detail-container">
  <% if (products && products.length > 0) { %>
    <% products.forEach(product => { %>
      <article class="art-detail">
        <% if (product.images && product.images.length > 0) { %>
          <% product.images.forEach(image => { %>
            <img class="guitar-grid"
                 src="/images/products/<%= image.file %>"
                 alt="<%= product.name %>" style="width: 16rem" />
          <% }) %>
        <% } else { %>
          <p>No hay imágenes para <%= product.name %>.</p>
        <% } %>

        <h3 class="detail"><%= product.name %></h3>

        <% if (product.discount != 0) { %>
          <span class="tachado">$<%= product.price %></span>
          <strong class="discountCard">/<%= product.discount %>% OFF</strong>
        <% } %>

        <h2 class="price-detail">Precio $
          <%= (product.price - product.price * product.discount / 100)
                .toFixed(0)
                .toString()
                .replace(/\B(?=(\d{3})+(?!\d))/g, ".") %>
        </h2>

        <a href="/"><button class="btn-det">Comprar</button></a>
      </article>
    <% }) %>
  <% } else { %>
    <p>El carrito está vacío.</p>
  <% } %>
</section>


      </main>
      <%- include('../partials/footer') %>
  </body>