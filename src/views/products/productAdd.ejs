<!DOCTYPE html>
<html>

<%- include('../partials/head',{ title:'Cargar producto' }) %>

  <body>
    <main class="body">

      <div id="registroForm">

        <h2 class="tit-reg">Agregar producto</h2>
<form action="/products/create" method="POST" id="formAddProduct" enctype="multipart/form-data">
  <br>
 
  <label for="name">Nombre del producto</label>
  <input class="reg-input" type="text" id="name" name="name" required>
  <div class="error" id="errorProduct"></div>
  <br>
  <label for="sectionId">Sección</label>
  <select name="section" id="section">
    <option value="" hidden selected>Seleccione sección...</option>
    <% sections.forEach(s => { %>
     <option value="<%= s.id %>"><%= s.name %></option>
    <% }) %>
   </select>

   <label for="brand">Marca</label>
<select name="brand" id="brand">
  <option value="" hidden selected>Seleccione marca...</option>
  <% brands.forEach(b => { %>
    <option value="<%= b.id %>"><%= b.name %></option>
  <% }) %>
</select>

    <label for="category">Categoría</label>
  <select name="category" id="category">
    <option value="" hidden selected>Seleccione categoria...</option>
    <% categories.forEach(c => { %>
     <option value="<%= c.id %>"><%= c.name %></option>
    <% }) %>
   </select>
  <br>

  <label for="price">Precio</label>
  <input class="reg-input" type="number" id="price" name="price" required>
  <div class="error" id="errorPrice"></div>
  <br>

  <label for="discount">Descuento</label>
  <input class="reg-input" type="number" id="discount" name="discount">
  <div class="error" id="errorDiscount"></div>
  <br>

  <label for="image" class="form-label">Imagenes</label>
  <input class="reg-input" type="file" name="image" id="image" >
  
  <label for="description" class="form-label">Descripción:</label>
  <textarea name="description" id="description" class="textarea" rows="8"></textarea>
  <br>
  
  <button type="submit" class="reg-button">Agregar producto</button>
</form>
</div>

</body>

</html>