<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/headAdmin', {title: 'Administrar usuarios' }) %>
<body>

    <%- include('./partials/headerAdmin', {title: 'Administrar usuarios' }) %>

  <main class="menu-admin">
  <table border="2" >
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Usuario</th>
        <th>email</th>
        <th>Rol</th>
        <th><div>
          <a class="btn btn-sm btn-new " href="/users/register">Nuevo registro</a>
        </div></th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(({id,name,surname,username,email,rolId}) => {%>
        <tr>
          <th scope="row"><%= id %></th>
          <td><%=name%></td>
          <td><%=surname%></td>
          <td><%=username%></td>
          <td><%=email%></td>
          <td><%=rolId%></td>
          <td> <div class="d-flex gap-2">
          <div>
              <a href="/users/profile/<%=id%>" class=" btn btn-edit">Editar</a>
            </div>			
            
              
              <form action="/users/remove/<%=id%>?_method=DELETE" method="POST" id="formAddProduct">
                <button  type="submit" class="btn btn-del">Eliminar</button>
              </form>
          						
            </div>
          </td>
        </tr>
     <% }) %>
  </tbody>
  </table>
  <tfoot>
    <%- include('./partials/pager', {
    path : '/admin/users',
    currentPage,
    totalPages
  }) %>
</tfoot>
</main>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
crossorigin="anonymous"></script>
</body>
</html>
