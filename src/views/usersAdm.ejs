<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/headAdmin', {title: 'Administrar Usuarios' }) %>

	<body style="background-color: rgb(166, 160, 160);">
		<!-- Header -->
		<%- include('./partials/headerAdmin') %>
			<!-- /Header -->

			<div class="container my-3">
				<div class="row">
					<div class="col-12">
						<div class="d-flex justify-content-between align-items-center">
							<h2 class="products-title">Administrar Usuarios</h2>
						</div>
						<hr>
					</div>
				</div>

				<div class="col-12">

					<div class="card shadow-lg">
						<div class="card-header bg-warning">
							<div class="d-flex flex-column flex-md-row justify-content-between  gap-2">
								<div class="d-flex flex-column flex-md-row gap-2">
									<form class="d-flex align-items-center" role="search">
										<input class="form-control me-2" name="search" type="search" placeholder="Buscar..."
											aria-label="Search">
										<button class="btn btn-outline-dark" type="submit"><i
												class="fa fa-search"></i></button>
									</form>
									<label for="rol" class="form-label">Rol</label>
									<select name="rol" id="rol" class="form-control form-select-lg py-3">
										<option value="" hidden selected>Eleg√≠ rol</option>
										<% roles.forEach(rol => { %>
											<option value="<%= rol %>">
												<%= rol=="user" ? 'Usuario' : 'Administrador' %>
											</option>
											<% }) %>
									</select>
										<button class="btn btn-outline-dark" type="submit"><i
												class="fa fa-filter"></i></button>
									</form>
								</div>
							
								<a class="btn btn-outline-dark " href="/users/add"><i class="fa fa-plus"></i> Nuevo</a>
							</div>
						
						
						</div>
						<div class="card-body table-responsive">
							<table class="table">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Nombre</th>
										<th scope="col">Apellido</th>
										<th scope="col">Usuario</th>
										<th scope="col">email</th>
										<th scope="col">password</th>
                    <th scope="col">rol</th>
										<th scope="col">Acciones</th>
									</tr>
								</thead>
								<tbody>
									<% users.forEach(({id, name, surname, username, email,password, rol})=> { %>
										<tr>
											<th scope="row">
												<%= id %>
											</th>
											<td>
												<%= name %>
											</td>
											<td>
												<%= surname %>
											</td>
											<td>
												<%= username %>
											</td>
											<td>
												<%= email %>
											</td>
											<td>
												<%= password %>
											</td>
											<td>
												<%= rol=="User" ? 'Usuario' : 'Administrador' %>
											</td>
											<td>
												<div class="d-flex gap-2">
													<button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal"
														data-bs-target="#showDetail<%= id %>">
														<i class="fas fa-search-plus"></i>													
													</button>
													<%- include('./partials/modalShowProduct',{id, name, surname, username, email,password, rol}) %>
													<a href="/products/edit/<%= id %>" class="btn btn-sm btn-success"><i
															class="fas fa-pencil-alt"></i></a>

													<button type="button" class="btn btn-sm btn-danger"
														data-bs-toggle="modal" data-bs-target="#modalDelete<%= id %>">
														<i class="fas fa-trash-alt"></i>
													</button>
												
												</div>

											</td>
										</tr>
										<% }) %>


								</tbody>
							
							</table>
						
						</div>
					</div>

				</div>

			</div>


			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
				integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
				crossorigin="anonymous"></script>

	</body>

</html>